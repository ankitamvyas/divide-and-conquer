/* Name of the class has to be "Main" only if the class is public. */
class Pair{
    int min;
    int max;
}
class MinMax
{
    public static void main (String[] args) throws java.lang.Exception
    {
        int a[]={1,2,7,4,8,9,5};
        Pair p=compare(a,0,a.length-1);
        System.out.println(p.min+"  "+p.max);
    }
    
   public static Pair compare(int a[],int l,int h){
            Pair p=new Pair();
            
        if(h==l){
                p.min=a[l];
                p.max=a[h];
                return p;
        } 
        if((h-l)==1){
            if(a[l]<a[h]){
                p.min=a[l];
                p.max=a[h];
                return p;
            } else{
            //Pair p=new Pair();
                p.min=a[h];
                p.max=a[l];
                return p;
            }
        }
        int mid=(l+h)/2;
        Pair le=compare(a,l,mid);
        Pair re=compare(a,mid+1,h);
        p.min= Math.min(le.min,re.min);
        p.max= Math.max(le.max,re.max);
        return p;
    }
}

